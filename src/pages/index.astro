const name = 'Sakis Doupas';
const title = 'Research Associate';
const researchFocus = 'Athena R.C.';

const skills = [
	'Web Dev', 'PHP', 'JavaScript', 'SQL', 
	'React', 'Python', 'C++'
];

const education = [
	{
		degree: 'Master of Science in Computer Science',
		university: 'University of Athens',
		year: 2020,
		field: 'Computer Science'
	},
	{
		degree: 'Bachelor of Science in Computer Science',
		university: 'University of Athens',
		year: 2018,
		field: 'Computer Science'
	}
];

const publications = [
	{
		title: 'Advanced Web Technologies in Research Environments',
		journal: 'International Journal of Computer Science',
		year: 2023,
		authors: ['Doupas, S.', 'et al.']
	},
	{
		title: 'Full Stack Development Paradigms in Scientific Computing',
		journal: 'Research Computing Quarterly',
		year: 2022,
		authors: ['Doupas, S.', 'Research Team']
	}
];

const contactInfo = {
	email: 'adoupass@doupas.com',
	linkedIn: 'https://www.linkedin.com/in/adoupas',
	github: 'https://github.com/adoupas',
	phone: '+30 XXX XXX XXXX'
};

const projects = [
	{
		name: 'Research Web Platform',
		description: 'Developed a comprehensive web platform for research data management and analysis',
		tech: ['React', 'Node.js', 'SQL']
	},
	{
		name: 'Scientific Data Visualization Tool',
		description: 'Created an interactive data visualization system for research insights',
		tech: ['Python', 'JavaScript', 'D3.js']
	}
];

import { Image } from 'astro:assets';
import profilePic from '../assets/profile.jpg';

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + '/favicon.svg'} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<meta name="description" content="Professional portfolio of Sakis Doupas, Research Associate at Athena R.C. with over 20 years of experience in full stack development, web technologies, and research software." />
		<meta name="keywords" content="Sakis Doupas, Research Associate, Web Development, Full Stack, PHP, JavaScript, React, Python, C++" />
		<meta name="author" content={name} />
		
		<!-- Security Meta Tags -->
		<meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https://via.placeholder.com data:;" />
		<meta http-equiv="X-Content-Type-Options" content="nosniff" />
		<meta http-equiv="X-Frame-Options" content="DENY" />
		<meta http-equiv="Referrer-Policy" content="no-referrer-when-downgrade" />
		<meta http-equiv="Permissions-Policy" content="camera=(), microphone=(), geolocation=()" />
		
		<title>{name} | {title}</title>
		<style>
			:root {
				--header-color: #ffc32b;
				--header-text-color: #000000;
				--sidebar-color: #1a3a5a;
				--accent-color: #3e5c76;
				--text-color: #333;
				--light-text: #fff;
				--border-color: #ddd;
				--section-heading-color: #1a3a5a;
			}
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}
			body {
				font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
				line-height: 1.6;
				color: var(--text-color);
				background-color: #f5f5f5;
				padding: 20px;
			}
			header {
				text-align: center;
				background-color: var(--header-color);
				color: var(--header-text-color);
				padding: 0.2rem;
			}
			.resume-container {
				max-width: 1200px;
				margin: 2rem auto;
				display: flex;
				background-color: #fff;
				box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
				border-radius: 12px;
				overflow: hidden; /* Ensures content doesn't overflow rounded corners */
				position: relative; /* Ensures the shadow is applied to the whole container */
			}
			.sidebar {
				width: 30%;
				background-color: var(--sidebar-color);
				color: var(--light-text);
				padding: 2rem;
			}
			.main-content {
				width: 70%;
				padding: 2rem;
			}
			.profile-image-container {
				text-align: center;
				margin-bottom: 2rem;
			}
			.profile-image {
				width: 180px;
				height: 180px;
				border-radius: 50%;
				object-fit: cover;
				border: 4px solid white;
			}
			.sidebar-section {
				margin-bottom: 2rem;
			}
			.sidebar-section h2 {
				font-size: 1.5rem;
				text-transform: uppercase;
				letter-spacing: 1px;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid rgba(255, 255, 255, 0.2);
			}
			.contact-item {
				display: flex;
				align-items: center;
				margin-bottom: 0.8rem;
			}
			.contact-icon {
				margin-right: 0.5rem;
				width: 20px;
				display: inline-block;
				color: white;
				font-size: 1.2rem;
			}
			.skill-list {
				padding-left: 1rem;
			}
			.bullet {
				color: white;
				margin-right: 0.5rem;
				font-size: 1.2rem;
			}
			.skill-list li {
				margin-bottom: 0.2rem;
			}
			.main-header {
				margin-bottom: 2rem;
			}
			.main-header h1 {
				font-size: 2.5rem;
				color: var(--section-heading-color);
				margin-bottom: 0.5rem;
			}
			.main-header h1 span {
				font-weight: normal;
			}
			.main-header h2 {
				font-size: 1.2rem;
				text-transform: uppercase;
				color: #555;
				margin-bottom: 1rem;
			}
			.main-header hr {
				border: none;
				height: 3px;
				background-color: var(--accent-color);
				width: 60px;
				margin-bottom: 1.5rem;
			}
			.content-section {
				margin-bottom: 2rem;
			}
			.content-section h2 {
				font-size: 1.5rem;
				color: var(--section-heading-color);
				text-transform: uppercase;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 1px solid var(--accent-color);
			}
			.content-section {
				position: relative;
			}
			.experience-item {
				margin-bottom: 2rem;
				position: relative;
				padding-left: 30px;
			}
			.timeline-dot {
				position: absolute;
				left: 0;
				top: 8px;
				width: 12px;
				height: 12px;
				border-radius: 50%;
				background-color: var(--accent-color);
				z-index: 2;
			}
			.content-section h2 {
				margin-bottom: 2rem;
			}
			/* Apply vertical line only to work experience section */
			#work-experience:before {
				content: "";
				position: absolute;
				left: 5px;
				top: 105px;
				width: 2px;
				height: calc(100% - 105px);
				background-color: #eaeaea;
				z-index: 1;
			}
			.experience-header {
				display: flex;
				justify-content: space-between;
				margin-bottom: 0.5rem;
			}
			.experience-title {
				font-weight: bold;
				font-size: 1.1rem;
			}
			.experience-date {
				color: #777;
			}
			.experience-subtitle {
				color: #555;
				margin-bottom: 0.5rem;
			}
			.experience-details {
				list-style-type: disc;
				padding-left: 1.5rem;
				margin-top: 0.5rem;
			}
			.experience-details li {
				margin-bottom: 0.5rem;
			}
			.publication-item {
				margin-bottom: 1.5rem;
			}
			.publication-title {
				font-weight: bold;
				margin-bottom: 0.3rem;
			}
			.publication-details {
				color: #555;
			}
			a {
				color: inherit;
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}
			footer {
				text-align: center;
				margin-top: 2rem;
			}
			
			@media (max-width: 768px) {
				.resume-container {
					flex-direction: column;
				}
				.sidebar, .main-content {
					width: 100%;
				}
			}
		</style>
	</head>
	<body>
		<header>
			<p>Provisional content for testing &#9760; Don't trust it!</p>
		</header>
		<main class="resume-container">
				<!-- Left Sidebar -->
				<aside class="sidebar">
					<div class="profile-image-container">
						<Image src={profilePic} alt={name} title="Hello world!" class="profile-image" />
					</div>

					<div class="sidebar-section">
						<h2>Contact</h2>
						<div class="contact-item">
							<span class="contact-icon">&#9742;</span>
							<span>{contactInfo.phone}</span>
						</div>
						<div class="contact-item">
							<span class="contact-icon">&#9993;</span>
							<a href={`mailto:${contactInfo.email}`}>{contactInfo.email}</a>
						</div>
						<div class="contact-item">
							<span class="contact-icon">
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1"  width="24" height="24" viewBox="0 0 24 24"><path fill="#FFFFFF" d="M12,2A10,10 0 0,0 2,12C2,16.42 4.87,20.17 8.84,21.5C9.34,21.58 9.5,21.27 9.5,21C9.5,20.77 9.5,20.14 9.5,19.31C6.73,19.91 6.14,17.97 6.14,17.97C5.68,16.81 5.03,16.5 5.03,16.5C4.12,15.88 5.1,15.9 5.1,15.9C6.1,15.97 6.63,16.93 6.63,16.93C7.5,18.45 8.97,18 9.54,17.76C9.63,17.11 9.89,16.67 10.17,16.42C7.95,16.17 5.62,15.31 5.62,11.5C5.62,10.39 6,9.5 6.65,8.79C6.55,8.54 6.2,7.5 6.75,6.15C6.75,6.15 7.59,5.88 9.5,7.17C10.29,6.95 11.15,6.84 12,6.84C12.85,6.84 13.71,6.95 14.5,7.17C16.41,5.88 17.25,6.15 17.25,6.15C17.8,7.5 17.45,8.54 17.35,8.79C18,9.5 18.38,10.39 18.38,11.5C18.38,15.32 16.04,16.16 13.81,16.41C14.17,16.72 14.5,17.33 14.5,18.26C14.5,19.6 14.5,20.68 14.5,21C14.5,21.27 14.66,21.59 15.17,21.5C19.14,20.16 22,16.42 22,12A10,10 0 0,0 12,2Z" /></svg>
							</span>
							<a href={contactInfo.github} target="_blank">GitHub Profile</a>
						</div>
						<div class="contact-item">
							<span class="contact-icon">
								<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1"  width="24" height="24" viewBox="0 0 24 24"><path fill="#FFFFFF" d="M21,21H17V14.25C17,13.19 15.81,12.31 14.75,12.31C13.69,12.31 13,13.19 13,14.25V21H9V9H13V11C13.66,9.93 15.36,9.24 16.5,9.24C19,9.24 21,11.28 21,13.75V21M7,21H3V9H7V21M5,3A2,2 0 0,1 7,5A2,2 0 0,1 5,7A2,2 0 0,1 3,5A2,2 0 0,1 5,3Z" /></svg>
							</span>
							<a href={contactInfo.linkedIn} target="_blank">LinkedIn</a>
						</div>
					</div>

					<div class="sidebar-section">
						<h2>Education</h2>
						<ul class="skill-list">
							{education.map(edu => <li> {edu.degree} - {edu.university} ({edu.year})</li>)}
						</ul>
					</div>

					<div class="sidebar-section">
						<h2>Skills</h2>
						<ul class="skill-list">
							{skills.map(skill => <li> {skill}</li>)}
						</ul>
					</div>
					
					<div class="sidebar-section">
						<h2>Languages</h2>
						<ul class="skill-list">
							<li> Greek (Fluent)</li>
							<li> English (Fluent)</li>
						</ul>
					</div>
				</aside>

				<!-- Main Content -->
				<section class="main-content">
					<div class="main-header">
						<h1><span>{name.split(' ')[0]}</span> {name.split(' ')[1]}</h1>
						<h2>{title}</h2>
						<hr />
						<p>
							Full stack developer with over 20 years of extensive experience in web development and research technologies. 
							Currently working as a Research Associate at Athena R.C., bringing a wealth of technical expertise 
							to solve complex computational challenges. Passionate about leveraging cutting-edge technologies 
							to drive innovative research solutions.
						</p>
					</div>

					<div id="work-experience" class="content-section">
						<h2>Work Experience</h2>
						{projects.map(project => (
							<div class="experience-item">
								<div class="timeline-dot"></div>
								<div class="experience-content">
									<div class="experience-header">
										<div class="experience-title">{project.name}</div>
										<div class="experience-date">2020 - Present</div>
									</div>
									<div class="experience-subtitle">{researchFocus}</div>
									<p>{project.description}</p>
									<ul class="experience-details">
										{project.tech.map(tech => <li>Utilized {tech} for development and implementation</li>)}
									</ul>
								</div>
							</div>
						))}
					</div>

					<div class="content-section">
						<h2>Publications</h2>
						{publications.map(pub => (
							<div class="publication-item">
								<div class="publication-title">{pub.title}</div>
								<div class="publication-details">
									<strong>{pub.journal}</strong> ({pub.year})<br />
									Authors: {pub.authors.join(', ')}
								</div>
							</div>
						))}
					</div>
				</section>
			</main>
		</main>
		<footer>
			ᕙ(⇀‸↼‶)ᕗ <pre> May the source be with you</pre>
		</footer>
	</body>
</html>
